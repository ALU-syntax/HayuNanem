<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/MainColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/warung1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_navdraw">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnImg_market1"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/warung"
                    android:scaleType="centerInside"
                    />

                <TextView
                    android:id="@+id/txt_market_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warteg Mang Uyah"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/btnImg_market1"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/txt_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btnImg_market1"
                    android:layout_below="@+id/txt_market_name1"
                    android:layout_marginLeft="10dp"
                    android:text="Jl. Kenangan Bersama"/>

                <TextView
                    android:id="@+id/txt_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btnImg_market1"
                    android:layout_below="@+id/txt_address1"
                    android:layout_margin="10dp"
                    android:text="0888888888"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/warung2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/warung1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnImg_market2"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/warteg"
                android:scaleType="centerInside"
                />

            <TextView
                android:id="@+id/txt_market_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warteg Mang Uyah"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/btnImg_market2"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/txt_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnImg_market2"
                android:layout_below="@+id/txt_market_name2"
                android:layout_marginLeft="10dp"
                android:text="Jl. Kenangan Bersama"/>

            <TextView
                android:id="@+id/txt_phone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnImg_market2"
                android:layout_below="@+id/txt_address2"
                android:layout_margin="10dp"
                android:text="0888888888"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/warung3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/warung2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnImg_market3"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/bakso"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/txt_market_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warteg Mang Uyah"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/btnImg_market3"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/txt_address3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnImg_market3"
                android:layout_below="@+id/txt_market_name3"
                android:layout_marginLeft="10dp"
                android:text="Jl. Kenangan Bersama"/>

            <TextView
                android:id="@+id/txt_phone3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnImg_market3"
                android:layout_below="@+id/txt_address3"
                android:layout_margin="10dp"
                android:text="0888888888"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>