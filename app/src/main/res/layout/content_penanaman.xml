<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_managemen_penanaman"
            >

            <TextView
                android:id="@+id/nama_tanaman_penanaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Paralon1"
                android:textColor="@color/black"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/txt_jenis_tanaman_penanaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama_tanaman_penanaman"
                android:text="Kangkung"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tgl_awal_tanam_penanaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/nama_tanaman_penanaman"
                android:text="12/11/2021"
                android:textColor="@color/black"/>


            <Button
                android:id="@+id/btn_delete_tanaman"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/txt_jenis_tanaman_penanaman"
                android:layout_marginRight="60dp"
                android:background="@drawable/ic_baseline_delete_24"
                android:backgroundTint="@color/black"
                android:elevation="20dp"
                />

            <Button
                android:id="@+id/btn_edit_tanaman"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/btn_delete_tanaman"
                android:layout_below="@+id/txt_jenis_tanaman_penanaman"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ic_baseline_edit_24"
                android:backgroundTint="@color/black"
                android:elevation="20dp"
                />
        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>