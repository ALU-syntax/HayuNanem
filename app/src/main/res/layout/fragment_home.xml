<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_home">

    <LinearLayout
        android:id="@+id/appbar_layout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:contentDescription="To Show Navigation Drawer"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_menu_24"
            android:layout_margin="10dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appbar_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Halo! Aligator Mahony"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_marginRight="80dp"/>

    <TextView
        android:id="@+id/txt_hayu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_nama"
        app:layout_constraintLeft_toLeftOf="@+id/txt_nama"
        android:text="Hayu Nanem Guys"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_riwayat_panen"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_hayu"
        android:layout_marginRight="60dp"
        android:background="@drawable/button_shape"
        android:text="Riwayat\nPanen"
        android:elevation="20dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tambah_tanaman"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_hayu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_shape"
        android:text="Tambah\nTanaman"
        android:elevation="20dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textSize="16sp"
        android:layout_marginLeft="70dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_managemen"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_riwayat_panen"
        android:layout_marginRight="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_shape"
        android:elevation="20dp"
        android:text="Managemen\nPenanaman"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_panduan"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_tambah_tanaman"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="70dp"
        android:elevation="20dp"
        android:background="@drawable/button_shape"
        android:text="Panudan\nPenanaman"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"/>

</androidx.constraintlayout.widget.ConstraintLayout>