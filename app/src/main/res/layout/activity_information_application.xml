<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainColor">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="650dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_application_information"
        android:elevation="20dp">
            <TextView
                android:id="@+id/txt_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information Application"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/txt_info_app"
                android:layout_below="@+id/txt_information"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:justificationMode="inter_word"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:text="Hayu Nanem application is an application that is engaged in agriculture, especially hydroponic vegetable farming. the Hayu Nanem application is made to make it easier for farmers to record planting and harvest times on plants, with this application farmers do not need to manually record planting dates and harvest dates because everything can be recorded in the Hayu Nanem application. besides that in this application, it can not only be a reminder of harvest time but in this application, there are several market lists that make it easy to sell vegetable crops."/>
            <TextView
                android:id="@+id/txt_dev"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="DEVELOP BY"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:layout_below="@+id/txt_info_app"
                />
            <ImageView
                android:id="@+id/txt_ardian"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/txt_dev"
                android:layout_marginLeft="55dp"
                />
            <ImageView
                android:id="@+id/txt_minan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/txt_dev"
                android:layout_marginLeft="200dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ardian"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_ardian"
                android:layout_marginLeft="85dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minan"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_minan"
                android:layout_marginLeft="230dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>