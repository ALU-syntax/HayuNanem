<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainColor">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="670dp"
        android:background="@drawable/shape_account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="20dp">
        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UBAH PROFILE"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/txt_1"
            />

        <EditText
            android:id="@+id/ed_nama_profile"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_edit_text"
            android:hint="masukkan nama"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_nama_profile"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Nomor Telfon :"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/ed_number_phone_account"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="masukkan nomor telfon"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:background="@drawable/shape_edit_text"
            android:layout_below="@+id/txt_3"
            />

        <TextView
            android:id="@+id/txt_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/ed_number_phone_account"/>

        <EditText
            android:id="@+id/ed_address"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_edit_text"
            android:gravity="start"
            android:layout_marginLeft="30dp"
            android:hint="masukkan Alamat"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_below="@+id/txt_alamat"/>

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_address"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/Button"
            android:text="Submit"
            android:visibility="gone"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_address"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/Button"
            android:text="Cancel"
            android:visibility="gone"
            android:textSize="20dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>