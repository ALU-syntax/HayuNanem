<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainColor">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="670dp"
        android:background="@drawable/shape_account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="20dp">
        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UBAH PROFILE"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/txt_1"
            />
        <EditText
            android:id="@+id/ed_nama"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="masukkan nama"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_edit_text"
            android:layout_below="@+id/txt_2"
            />
        <TextView
            android:id="@+id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/ed_nama"
            />
        <EditText
            android:id="@+id/ed_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="masukkan email"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:background="@drawable/shape_edit_text"
            android:layout_below="@+id/txt_3"
            />

        <TextView
            android:id="@+id/txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_email"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Number Phone :"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/ed_nmbr_phone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="masukkan number phone"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_edit_text"
            android:layout_below="@+id/txt_4"
            />
        <TextView
            android:id="@+id/txt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password :"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/ed_nmbr_phone"
            />
        <EditText
            android:id="@+id/ed_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="masukkan password"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_edit_text"
            android:layout_below="@+id/txt_5"
            />
        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="20dp"
            android:backgroundTint="@color/Button"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/ed_pass"
            android:layout_marginLeft="30dp"
            />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="20dp"
            android:backgroundTint="@color/Button"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/ed_pass"
            android:layout_marginLeft="170dp"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>